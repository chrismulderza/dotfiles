        name = Chris Mulder
[credential]
        helper = osxkeychain

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green

[color "status"]
    added = green
    changed = yellow
    untracked = red

[core]
    editor = vim
    autocrlf = false
    whitespace = trailing-space,space-before-tab
    excludesfile = ~/.gitignore_global

[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)%an%d%Creset %s %Cgreen(%cr)%Creset' --date=relative
    s = status
    c = commit
    d = diff

